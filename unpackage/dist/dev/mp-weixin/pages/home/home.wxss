page {
  height: auto;
  background-color: #FFFFFF;
}
.home_container .home_img {
  width: 100%;
  height: 400rpx;
}
.home_container .home_img .swiper .home_img_bg {
  width: 100%;
  height: 80%;
}
.home_container .home_content {
  position: relative;
  top: -210rpx;
  background-color: #fdfdfd;
  width: 100%;
  border-top-left-radius: 3em;
  border-top-right-radius: 3em;
}
.home_container .home_content .home_content_card {
  position: relative;
  top: 50rpx;
  height: 180rpx;
  margin: 40rpx 20rpx;
}
.home_container .home_content .home_content_card .content_card_item {
  width: 48%;
  height: 100%;
  border-radius: 1.5em;
  background-color: #ffffff;
  box-shadow: 0 1rpx 16rpx rgba(0, 0, 0, 0.1);
}
.home_container .home_content .home_content_card .content_card_item .card_item_content {
  margin-left: 20rpx;
}
.home_container .home_content .home_content_card .content_card_item .card_item_content .card_item_img {
  margin: 10rpx;
  width: 80rpx;
  height: 80rpx;
}
.home_container .home_content .home_content_card .content_card_item .card_item_content .card_item_text {
  color: #4d85fd;
  font-size: 36rpx;
  font-weight: bold;
}
.home_container .home_content .home_content_card .content_card_item .card_item_content .card_item_subtext {
  margin-top: 10rpx;
  font-size: 28rpx;
}

